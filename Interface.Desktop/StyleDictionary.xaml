<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DKSY.Interface.Desktop">

    <Style x:Key="TextField">
        <Setter Property="Control.Background" Value="#FF230000"/>
        <Setter Property="Control.Foreground" Value="#FF2C9116"/>
    </Style>
    
    <Style x:Key="MainWindowStyle" TargetType="Grid">
        <Setter Property="Background" Value="Black"/>
    </Style>
    
    <Style x:Key="MessageListBox" TargetType="ListBox">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style x:Key="MessagePostBox" TargetType="TextBox" BasedOn="{StaticResource TextField}">
        
    </Style>

    <Style x:Key="PostedMessage" TargetType="TextBlock" BasedOn="{StaticResource TextField}">
        
    </Style>
</ResourceDictionary>